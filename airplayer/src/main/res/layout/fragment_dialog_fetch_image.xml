<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:divider="@color/air_primary_text"
    android:showDividers="middle">

    <TextView
        android:id="@+id/fetch_picture_from_internet"
        android:text="@string/fetch_picture_from_internet"
        android:textColor="@color/air_primary_text"
        android:textSize="@dimen/xxTextSize"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16_560"
        android:background="@drawable/custom_selector"
        />

    <TextView
        android:id="@+id/delete_picture_downloaded"
        android:text="@string/delete_picture_downloaded"
        android:textColor="@color/air_primary_text"
        android:textSize="@dimen/xxTextSize"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_16_560"
        android:background="@drawable/custom_selector"
        />

</LinearLayout>