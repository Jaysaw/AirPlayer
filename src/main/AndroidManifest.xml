<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.airplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.AirMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ArtistActivity"
            android:parentActivityName=".activity.AirMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.AirMainActivity"
                />
        </activity>

        <activity android:name=".activity.AlbumActivity"
            android:parentActivityName=".activity.AirMainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.AirMainActivity"/>
        </activity>

        <service android:name=".service.PlayMusicService"/>

    </application>

</manifest>
