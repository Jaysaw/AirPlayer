<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/recent"
            android:textSize="20sp"
            android:textColor="@color/air_primary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/play_now_top_max_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/play_now_top_album_title"
                    android:textSize="14sp"
                    android:textColor="@color/air_primary_text"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp_8_560"
                    android:layout_marginRight="@dimen/dp_8_560"
                    android:layout_marginStart="@dimen/dp_8_560"
                    android:layout_marginEnd="@dimen/dp_8_560"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/album_artist_name"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/dp_8_560"
                    android:layout_marginRight="@dimen/dp_8_560"
                    android:layout_marginStart="@dimen/dp_8_560"
                    android:layout_marginEnd="@dimen/dp_8_560"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

        </CardView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/play_now_second_image_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/play_now_second_image_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/play_now_third_image_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/play_now_third_image_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>



    </LinearLayout>


</ScrollView>